{
  "manifest_version": "0.2",
  "name": "canvas-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Canvas LMS integration",
  "author": {
    "name": "MB Samuel"
  },
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.js"
      ],
      "env": {
        "CANVAS_API_TOKEN": "${user_config.CANVAS_API_TOKEN}",
        "CANVAS_DOMAIN": "${user_config.CANVAS_DOMAIN}"
      }
    }
  },
  "tools": [
    {
      "name": "list_courses",
      "description": "Shows all active courses by default. Use flags to show completed or all courses"
    },
    {
      "name": "search_assignments"
    },
    {
      "name": "get_assignment"
    }
  ],
  "user_config": {
    "CANVAS_API_TOKEN": {
      "type": "string",
      "title": "Canvas API Token",
      "description": "Your API Token from Canvas",
      "required": true,
      "sensitive": true
    },
    "CANVAS_DOMAIN": {
      "type": "string",
      "title": "Canvas Domain",
      "description": "Your canvas domain, e.g. canvas-domain.instructure.com",
      "required": true,
      "sensitive": false
    }
  },
  "keywords": [
    "canvas",
    "lms",
    "instructure"
  ],
  "license": "MIT"
}
